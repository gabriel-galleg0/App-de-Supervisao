<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background_novo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.VendedorAcoes">

    <Button
        android:id="@+id/botaoEnviarVendedor"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FAFAFA"
        android:shadowColor="#000000"
        android:text="Enviar Formulário"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.906" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_acoes"
        android:layout_width="408dp"
        android:layout_height="514dp"
        android:padding="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutContent"
        android:layout_width="409dp"
        android:layout_height="186dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_acoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/pendencia"
            android:layout_width="323dp"
            android:layout_height="41dp"
            android:background="@drawable/background_txt_cadastro"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Pendencia encontrada"
            android:padding="8dp"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.916" />

        <TextView
            android:id="@+id/nomePdv"
            android:layout_width="340dp"
            android:layout_height="42dp"
            android:background="@drawable/background_txt_cadastro"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Nome do PDV"
            android:inputType="phone"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.972" />

        <TextView
            android:id="@+id/pendencias"
            android:layout_width="292dp"
            android:layout_height="81dp"
            android:background="@drawable/background_txt_cadastro"
            android:drawablePadding="8dp"
            android:ems="10"
            android:hint="Pendências"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:buttonTint="#FEFCFC"
            android:checked="true"
            android:clickable="false"
            android:text="SIM"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.816"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.906" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

