<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@drawable/bg_contatos"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/nomeDaLoja"
        android:drawableStart="@drawable/baseline_local_grocery_store_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nome da Loja: "
        android:textColor="@color/black"
        android:drawablePadding="5dp"
        />

    <TextView
        android:drawablePadding="5dp"
        android:id="@+id/pendenciaEncontrada"
        android:textColor="@color/black"
        android:drawableStart="@drawable/baseline_error_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Pendencia: "
        />

</LinearLayout>