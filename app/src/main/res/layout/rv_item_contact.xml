<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@drawable/bg_contatos"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/nomeVendedorCt"
        android:drawableStart="@drawable/baseline_person_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Nome do Vendedor: "
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/telefoneVendedorCt"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_contatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Numero do Vendedor: "
        />

    <Button
        android:layout_gravity="end"
        android:id="@+id/btnWhats"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_msg"

        />
</LinearLayout>